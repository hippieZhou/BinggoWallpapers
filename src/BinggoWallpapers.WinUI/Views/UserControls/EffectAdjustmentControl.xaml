<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="BinggoWallpapers.WinUI.Views.UserControls.EffectAdjustmentControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:CommunityToolkit.WinUI.Animations"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BinggoWallpapers.WinUI.Views.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid
        animations:Implicit.HideAnimations="{StaticResource HideTransitions}"
        animations:Implicit.ShowAnimations="{StaticResource ShowTransitions}"
        Style="{StaticResource CardGridStyle}">
        <Grid.Resources>
            <x:Double x:Key="SliderTrackThemeHeight">4</x:Double>
            <Style BasedOn="{StaticResource DefaultSliderStyle}" TargetType="Slider">
                <Setter Property="Margin" Value="0,0,0,0" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="MinWidth" Value="100" />
                <Setter Property="StepFrequency" Value="0.1" />
                <Setter Property="TickFrequency" Value="0.1" />
                <Setter Property="Grid.ColumnSpan" Value="2" />
            </Style>
            <Style x:Key="ValueTextBlock" TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Right" />
                <Setter Property="Grid.Column" Value="1" />
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="144" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Slider
            x:Uid="DetailPage_ExposureSlider"
            Grid.Row="0"
            Foreground="Transparent"
            Maximum="2"
            Minimum="-2"
            Template="{StaticResource FancySliderControlTemplate}"
            Value="{x:Bind Exposure, Mode=TwoWay}">
            <Slider.Background>
                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                    <LinearGradientBrush.GradientStops>
                        <GradientStop Offset="0" Color="Black" />
                        <GradientStop Offset="1" Color="White" />
                    </LinearGradientBrush.GradientStops>
                </LinearGradientBrush>
            </Slider.Background>
        </Slider>
        <TextBlock
            Grid.Row="0"
            Style="{StaticResource ValueTextBlock}"
            Text="{x:Bind Exposure.ToString('N', Culture), Mode=OneWay}" />

        <Slider
            x:Uid="DetailPage_TemperatureSlider"
            Grid.Row="1"
            Foreground="Transparent"
            Maximum="1"
            Minimum="-1"
            Template="{StaticResource FancySliderControlTemplate}"
            Value="{x:Bind Temperature, Mode=TwoWay}">
            <Slider.Background>
                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                    <LinearGradientBrush.GradientStops>
                        <GradientStop Offset="0" Color="Blue" />
                        <GradientStop Offset="1" Color="Yellow" />
                    </LinearGradientBrush.GradientStops>
                </LinearGradientBrush>
            </Slider.Background>
        </Slider>
        <TextBlock
            Grid.Row="1"
            Style="{StaticResource ValueTextBlock}"
            Text="{x:Bind Temperature.ToString('N', Culture), Mode=OneWay}" />

        <Slider
            x:Uid="DetailPage_TintSlider"
            Grid.Row="2"
            Foreground="Transparent"
            Maximum="1"
            Minimum="-1"
            Template="{StaticResource FancySliderControlTemplate}"
            Value="{x:Bind Tint, Mode=TwoWay}">
            <Slider.Background>
                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                    <LinearGradientBrush.GradientStops>
                        <GradientStop Offset="0" Color="Red" />
                        <GradientStop Offset="1" Color="Green" />
                    </LinearGradientBrush.GradientStops>
                </LinearGradientBrush>
            </Slider.Background>
        </Slider>
        <TextBlock
            Grid.Row="2"
            Style="{StaticResource ValueTextBlock}"
            Text="{x:Bind Tint.ToString('N', Culture), Mode=OneWay}" />

        <Slider
            x:Uid="DetailPage_BlurSlider"
            Grid.Row="3"
            Maximum="5"
            Minimum="0"
            Value="{x:Bind Blur, Mode=TwoWay}" />
        <TextBlock
            Grid.Row="3"
            Style="{StaticResource ValueTextBlock}"
            Text="{x:Bind Blur.ToString('N', Culture), Mode=OneWay}" />

        <Slider
            x:Uid="DetailPage_ContrastSlider"
            Grid.Row="4"
            Foreground="Transparent"
            Maximum="1"
            Minimum="-1"
            Value="{x:Bind Contrast, Mode=TwoWay}" />
        <TextBlock
            Grid.Row="4"
            Style="{StaticResource ValueTextBlock}"
            Text="{x:Bind Contrast.ToString('N', Culture), Mode=OneWay}" />

        <Slider
            x:Uid="DetailPage_SaturationSlider"
            Grid.Row="5"
            Maximum="1"
            Minimum="0"
            Value="{x:Bind Saturation, Mode=TwoWay}" />
        <TextBlock
            Grid.Row="5"
            Style="{StaticResource ValueTextBlock}"
            Text="{x:Bind Saturation.ToString('N', Culture), Mode=OneWay}" />

        <Slider
            x:Uid="DetailPage_PixelScaleSlider"
            Grid.Row="6"
            Maximum="1"
            Minimum="0.1"
            Value="{x:Bind PixelScale, Mode=TwoWay}" />
        <TextBlock
            Grid.Row="6"
            Style="{StaticResource ValueTextBlock}"
            Text="{x:Bind PixelScale.ToString('N', Culture), Mode=OneWay}" />

        <Slider
            x:Uid="DetailPage_CornerRadiusSlider"
            Grid.Row="7"
            Maximum="100"
            Minimum="0"
            Value="{x:Bind CornerRadius, Mode=TwoWay}" />
        <TextBlock
            Grid.Row="7"
            Style="{StaticResource ValueTextBlock}"
            Text="{x:Bind CornerRadius.ToString('F0', Culture), Mode=OneWay}" />
    </Grid>
</UserControl>
