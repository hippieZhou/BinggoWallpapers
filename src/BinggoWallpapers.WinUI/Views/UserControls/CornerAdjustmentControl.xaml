<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="BinggoWallpapers.WinUI.Views.UserControls.CornerAdjustmentControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:CommunityToolkit.WinUI.Animations"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:BinggoWallpapers.WinUI.Views.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">

    <Grid
        animations:Implicit.HideAnimations="{StaticResource HideTransitions}"
        animations:Implicit.ShowAnimations="{StaticResource ShowTransitions}"
        Style="{StaticResource CardGridStyle}">
        <Grid.Resources>
            <x:Double x:Key="SliderTrackThemeHeight">4</x:Double>
            <Style BasedOn="{StaticResource DefaultSliderStyle}" TargetType="Slider">
                <Setter Property="Margin" Value="0,0,0,0" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="MinWidth" Value="100" />
                <Setter Property="StepFrequency" Value="0.1" />
                <Setter Property="TickFrequency" Value="0.1" />
                <Setter Property="Grid.ColumnSpan" Value="2" />
            </Style>
            <Style x:Key="ValueTextBlock" TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Right" />
                <Setter Property="Grid.Column" Value="1" />
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="144" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Slider
            Grid.Row="0"
            Maximum="100"
            Minimum="0"
            SmallChange="10"
            StepFrequency="10"
            Value="{x:Bind Left, Mode=TwoWay}">
            <Slider.Header>
                <ContentPresenter HorizontalAlignment="Left" Content="{ui:FontIcon Glyph=&#xE90C;}" />
            </Slider.Header>
        </Slider>
        <TextBlock
            Grid.Row="0"
            Style="{StaticResource ValueTextBlock}"
            Text="{x:Bind Left.ToString('N', Culture), Mode=OneWay}" />

        <Slider Grid.Row="1" Value="{x:Bind Top, Mode=TwoWay}">
            <Slider.Header>
                <ContentPresenter HorizontalAlignment="Left" Content="{ui:FontIcon Glyph=&#xE66A;}" />
            </Slider.Header>
        </Slider>
        <TextBlock
            Grid.Row="1"
            Style="{StaticResource ValueTextBlock}"
            Text="{x:Bind Top.ToString('N', Culture), Mode=OneWay}" />

        <Slider Grid.Row="2" Value="{x:Bind Right, Mode=TwoWay}">
            <Slider.Header>
                <ContentPresenter HorizontalAlignment="Left" Content="{ui:FontIcon Glyph=&#xE90D;}" />
            </Slider.Header>
        </Slider>
        <TextBlock
            Grid.Row="2"
            Style="{StaticResource ValueTextBlock}"
            Text="{x:Bind Right.ToString('N', Culture), Mode=OneWay}" />

        <Slider Grid.Row="3" Value="{x:Bind Bottom, Mode=TwoWay}">
            <Slider.Header>
                <ContentPresenter HorizontalAlignment="Left" Content="{ui:FontIcon Glyph=&#xE66B;}" />
            </Slider.Header>
        </Slider>
        <TextBlock
            Grid.Row="3"
            Style="{StaticResource ValueTextBlock}"
            Text="{x:Bind Bottom.ToString('N', Culture), Mode=OneWay}" />
    </Grid>
</UserControl>
