{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.6",
  "backgroundImage": "${backgroundImageUrl}",
  "header": {
    "text": "${title}",
    "wrap": true
  },
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "${copyright}",
          "horizontalAlignment": "Center",
          "weight": "Bolder",
          "wrap": true,
          "size": "Small",
          "$when": "${$host.widgetSize == \"small\"}"
        },
        {
          "type": "TextBlock",
          "text": "${copyright}",
          "horizontalAlignment": "Center",
          "weight": "Bolder",
          "wrap": true,
          "size": "Medium",
          "$when": "${$host.widgetSize != \"small\"}"
        },
        {
          "type": "TextBlock",
          "text": "${caption}",
          "horizontalAlignment": "Center",
          "wrap": true,
          "isSubtle": true,
          "size": "Small",
          "$when": "${$host.widgetSize != \"small\" && caption != null}"
        },
        {
          "type": "TextBlock",
          "text": "${errorMessage}",
          "wrap": true,
          "color": "Warning",
          "isSubtle": true,
          "size": "Small",
          "$when": "${errorMessage != null}"
        }
      ],
      "height": "stretch",
      "horizontalAlignment": "Center",
      "verticalContentAlignment": "Center"
    }
  ],
  "actions": [
    {
      "type": "Action.Execute",
      "title": "刷新",
      "verb": "refresh",
      "$when": "${$host.widgetSize != \"small\"}"
    }
  ]
}
