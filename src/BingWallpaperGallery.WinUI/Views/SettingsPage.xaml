<Page
    x:Class="BingWallpaperGallery.WinUI.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dto="using:BingWallpaperGallery.Core.DTOs"
    xmlns:helpers="using:BingWallpaperGallery.WinUI.Helpers"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:BingWallpaperGallery.WinUI.Models"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:xaml="using:Microsoft.UI.Xaml"
    mc:Ignorable="d">
    <Page.Resources>
        <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
        <x:Double x:Key="SettingsCardSpacing">4</x:Double>
        <Style
            x:Key="SettingsSectionHeaderTextBlockStyle"
            BasedOn="{StaticResource BodyStrongTextBlockStyle}"
            TargetType="TextBlock">
            <Style.Setters>
                <Setter Property="Margin" Value="1,30,0,6" />
            </Style.Setters>
        </Style>
    </Page.Resources>

    <ScrollViewer>
        <Grid Padding="36,48,36,36">
            <StackPanel
                MaxWidth="1000"
                HorizontalAlignment="Stretch"
                Spacing="{StaticResource SettingsCardSpacing}">
                <StackPanel.ChildrenTransitions>
                    <EntranceThemeTransition FromVerticalOffset="50" />
                    <RepositionThemeTransition IsStaggeringEnabled="False" />
                </StackPanel.ChildrenTransitions>
                <TextBlock
                    x:Uid="SettingsPage_PageTitle"
                    d:Text="个性化设置"
                    Style="{StaticResource SubtitleTextBlockStyle}" />

                <TextBlock
                    x:Uid="SettingsPage_AppearanceSection"
                    d:Text="外观"
                    Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" />
                <controls:SettingsExpander
                    x:Uid="SettingsPage_ThemeExpander"
                    d:Description="选择符合你心情和偏好的主题。你可以从深色、浅色或系统主题中进行选择。"
                    d:Header="应用主题"
                    HeaderIcon="{ui:FontIcon Glyph=&#xE790;}">
                    <controls:SettingsExpander.Items>
                        <controls:SettingsCard ContentAlignment="Left">
                            <StackPanel>
                                <RadioButton
                                    x:Uid="SettingsPage_ThemeLight"
                                    d:Content="浅色"
                                    Command="{x:Bind ViewModel.SwitchThemeCommand}"
                                    FontSize="15"
                                    GroupName="AppTheme"
                                    IsChecked="{x:Bind ViewModel.CurrentTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Light, Mode=OneWay}">
                                    <RadioButton.CommandParameter>
                                        <xaml:ElementTheme>Light</xaml:ElementTheme>
                                    </RadioButton.CommandParameter>
                                </RadioButton>
                                <RadioButton
                                    x:Uid="SettingsPage_ThemeDark"
                                    d:Content="深色"
                                    Command="{x:Bind ViewModel.SwitchThemeCommand}"
                                    FontSize="15"
                                    GroupName="AppTheme"
                                    IsChecked="{x:Bind ViewModel.CurrentTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Dark, Mode=OneWay}">
                                    <RadioButton.CommandParameter>
                                        <xaml:ElementTheme>Dark</xaml:ElementTheme>
                                    </RadioButton.CommandParameter>
                                </RadioButton>
                                <RadioButton
                                    x:Uid="SettingsPage_ThemeDefault"
                                    d:Content="使用 Windows 默认"
                                    Command="{x:Bind ViewModel.SwitchThemeCommand}"
                                    FontSize="15"
                                    GroupName="AppTheme"
                                    IsChecked="{x:Bind ViewModel.CurrentTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Default, Mode=OneWay}">
                                    <RadioButton.CommandParameter>
                                        <xaml:ElementTheme>Default</xaml:ElementTheme>
                                    </RadioButton.CommandParameter>
                                </RadioButton>
                            </StackPanel>
                        </controls:SettingsCard>
                    </controls:SettingsExpander.Items>
                </controls:SettingsExpander>

                <controls:SettingsExpander
                    x:Uid="SettingsPage_LanguageExpander"
                    d:Description="选择应用显示的语言。更改后需要重启应用才能生效。"
                    d:Header="应用语言"
                    HeaderIcon="{ui:FontIcon Glyph=&#xF2B7;}">
                    <controls:SettingsExpander.Items>
                        <controls:SettingsCard ContentAlignment="Left">
                            <StackPanel>
                                <RadioButton
                                    x:Uid="SettingsPage_LanguageZhCN"
                                    d:Content="简体中文"
                                    Command="{x:Bind ViewModel.SwitchLanguageCommand}"
                                    CommandParameter="zh-cn"
                                    FontSize="15"
                                    GroupName="AppLanguage"
                                    IsChecked="{x:Bind ViewModel.CurrentLanguage, Converter={StaticResource StringToBooleanConverter}, ConverterParameter='zh-cn', Mode=OneWay}" />
                                <RadioButton
                                    x:Uid="SettingsPage_LanguageEnUS"
                                    d:Content="English (United States)"
                                    Command="{x:Bind ViewModel.SwitchLanguageCommand}"
                                    CommandParameter="en-us"
                                    FontSize="15"
                                    GroupName="AppLanguage"
                                    IsChecked="{x:Bind ViewModel.CurrentLanguage, Converter={StaticResource StringToBooleanConverter}, ConverterParameter='en-us', Mode=OneWay}" />
                            </StackPanel>
                        </controls:SettingsCard>
                    </controls:SettingsExpander.Items>
                </controls:SettingsExpander>

                <TextBlock
                    x:Uid="SettingsPage_AdvancedSection"
                    d:Text="高级设置"
                    Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" />
                <controls:SettingsCard
                    x:Uid="SettingsPage_SyncCard"
                    d:Description="可获取作者自建的归档数据集合"
                    d:Header="同步数据"
                    HeaderIcon="{ui:FontIcon Glyph=&#xEDAB;}">
                    <Button
                        x:Uid="SettingsPage_SyncButton"
                        Width="120"
                        Margin="0,0,28,0"
                        d:Content="同步"
                        Command="{x:Bind ViewModel.FetchFromGithubCommand}" />
                </controls:SettingsCard>
                <controls:SettingsExpander
                    x:Uid="SettingsPage_DownloadExpander"
                    d:Description="下载并保存图片到本地设备，方便随时查看"
                    d:Header="图片下载"
                    HeaderIcon="{ui:FontIcon Glyph=&#xEBD3;}">
                    <Button
                        x:Uid="SettingsPage_DownloadChangeButton"
                        Width="120"
                        d:Content="修改"
                        Command="{x:Bind ViewModel.ChangeDownloadFolderCommand}"
                        CommandParameter="{x:Bind ViewModel.PicturesPath, Mode=OneWay}" />
                    <controls:SettingsExpander.Items>
                        <controls:SettingsCard>
                            <controls:SettingsCard.Header>
                                <HyperlinkButton
                                    Command="{x:Bind ViewModel.OpenFolderCommand}"
                                    CommandParameter="{x:Bind ViewModel.PicturesPath, Mode=OneWay}"
                                    Content="{x:Bind ViewModel.PicturesPath, Mode=OneWay}" />
                            </controls:SettingsCard.Header>
                            <Button
                                x:Uid="SettingsPage_DownloadResetButton"
                                Width="120"
                                d:Content="重置"
                                Command="{x:Bind ViewModel.ResetDownloadFolderCommand}"
                                CommandParameter="{x:Bind model:AppSettings.Current.DefaultPicturesPath, Mode=OneTime}" />
                        </controls:SettingsCard>
                    </controls:SettingsExpander.Items>
                </controls:SettingsExpander>
                <controls:SettingsExpander
                    x:Uid="SettingsPage_LogExpander"
                    d:Description="记录应用的功能更新、问题修复和优化情况"
                    d:Header="应用日志"
                    HeaderIcon="{ui:FontIcon Glyph=&#xE9D9;}">
                    <Button
                        x:Uid="SettingsPage_LogClearButton"
                        Width="120"
                        d:Content="清空"
                        Command="{x:Bind ViewModel.LogCleanUpCommand}" />
                    <controls:SettingsExpander.Items>
                        <controls:SettingsCard>
                            <controls:SettingsCard.Header>
                                <HyperlinkButton
                                    Command="{x:Bind ViewModel.OpenFolderCommand}"
                                    CommandParameter="{x:Bind model:AppSettings.Current.DefaulttLocalLogFolder, Mode=OneTime}"
                                    Content="{x:Bind model:AppSettings.Current.DefaulttLocalLogFolder, Mode=OneTime}" />
                            </controls:SettingsCard.Header>
                            <TextBlock
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                IsTextSelectionEnabled="True"
                                Text="{x:Bind ViewModel.LogFileSizeInBytes, Mode=OneWay, Converter={StaticResource FileSizeToFriendlyStringConverter}}" />
                        </controls:SettingsCard>
                    </controls:SettingsExpander.Items>
                </controls:SettingsExpander>

                <TextBlock
                    x:Uid="SettingsPage_AboutSection"
                    d:Text="关于"
                    Style="{ThemeResource SettingsSectionHeaderTextBlockStyle}" />
                <controls:SettingsExpander
                    x:Uid="SettingsPage_AboutExpander"
                    d:Description="© 2025. All rights reserved."
                    Header="{x:Bind model:AppSettings.AppTitle, Mode=OneTime}"
                    HeaderIcon="{ui:BitmapIcon ShowAsMonochrome=False,
                                               Source=ms-appx:///Assets/StoreLogo.png}">
                    <TextBlock
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        IsTextSelectionEnabled="True"
                        Text="{x:Bind model:AppSettings.AppVersion, Mode=OneTime}" />
                    <controls:SettingsExpander.Items>
                        <controls:SettingsCard
                            x:Uid="SettingsPage_CloneRepoCard"
                            d:Header="克隆本仓库"
                            ActionIcon="{ui:FontIcon Glyph=&#xE8C8;}"
                            Command="{x:Bind ViewModel.CloneRepoCommand}"
                            CommandParameter="git clone https://github.com/hippieZhou/BingWallpaperGallery"
                            IsClickEnabled="True">
                            <TextBlock
                                FontFamily="Consolas"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                IsTextSelectionEnabled="True"
                                Text="git clone https://github.com/hippieZhou/BingWallpaperGallery" />
                        </controls:SettingsCard>
                        <controls:SettingsCard
                            x:Uid="SettingsPage_FeedbackCard"
                            d:Header="问题反馈"
                            ActionIcon="{ui:FontIcon Glyph=&#xE8A7;}"
                            Command="{x:Bind ViewModel.BugRequestCommand}"
                            IsClickEnabled="True" />
                        <controls:SettingsCard
                            x:Uid="SettingsPage_DependenciesCard"
                            HorizontalContentAlignment="Left"
                            d:Header="依赖 &amp; 引用"
                            ContentAlignment="Vertical">
                            <StackPanel Margin="-12,0,0,0" Orientation="Vertical">
                                <HyperlinkButton Content="{x:Bind model:AppSettings.WinAppSdkRuntimeDetails, Mode=OneTime}" NavigateUri="https://aka.ms/windowsappsdk" />
                                <HyperlinkButton Content="WinUI 3" NavigateUri="https://aka.ms/winui" />
                                <HyperlinkButton Content="WinUIEx" NavigateUri="https://dotmorten.github.io/WinUIEx" />
                                <HyperlinkButton Content="Labs-Windows" NavigateUri="https://github.com/CommunityToolkit/Labs-Windows" />
                                <HyperlinkButton Content="ImageEx.WinUI" NavigateUri="https://github.com/4OTbIPE/imageex" />
                                <HyperlinkButton Content="Windows Community Toolkit" NavigateUri="https://aka.ms/toolkit/windows" />
                                <HyperlinkButton Content="Win2D" NavigateUri="https://github.com/Microsoft/Win2D" />
                                <HyperlinkButton Content="CsWin32" NavigateUri="https://github.com/Microsoft/CsWin32" />
                                <HyperlinkButton Content="Serilog" NavigateUri="https://github.com/serilog" />
                                <HyperlinkButton Content="Microsoft.EntityFrameworkCore.Sqlite" NavigateUri="https://github.com/dotnet/efcore" />
                            </StackPanel>
                        </controls:SettingsCard>
                        <controls:SettingsCard
                            x:Uid="SettingsPage_DisclaimerCard"
                            HorizontalContentAlignment="Left"
                            d:Header="THIS CODE AND INFORMATION IS PROVIDED 'AS IS' WITHOUT WARRANTY OF ANY KIND, EITHER EXPRESSED OR IMPLIED, INCLUDING BUT NOT LIMITED TO THE IMPLIED WARRANTIES OF MERCHANTABILITY AND/OR FITNESS FOR A PARTICULAR PURPOSE."
                            ContentAlignment="Vertical">
                            <StackPanel Margin="-12,0,0,0" Orientation="Vertical">
                                <HyperlinkButton
                                    x:Uid="SettingsPage_PrivacyStatementLink"
                                    d:Content="Application Privacy Statement"
                                    NavigateUri="https://hippiezhou.github.io/products/bing-wallpaper-gallery/privacy-policy" />
                            </StackPanel>
                        </controls:SettingsCard>
                    </controls:SettingsExpander.Items>
                </controls:SettingsExpander>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
